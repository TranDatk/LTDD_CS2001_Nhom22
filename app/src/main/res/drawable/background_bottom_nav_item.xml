<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#a7c7cb" /> <!-- Replace with your desired glass color -->
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#a7c7cb" /> <!-- Replace with your desired glass color -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Default background color when not selected or pressed -->
        </shape>
    </item>
</selector>