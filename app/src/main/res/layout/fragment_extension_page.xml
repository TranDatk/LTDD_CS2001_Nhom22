<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Extension.ExtensionPageFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiện ích"
            android:textSize="24dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_background"
            >
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bộ sưu tập nhà cho thuê"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_list"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[Hà Nội] Danh sách phòng trọ giá rẻ dành cho công nhân"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/ic_circle"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[Đà Nẵng] Phòng trọ công nhân giá rẻ tại Đà Nẵng"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/ic_circle"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[TP.HCM] Phòng trọ giá rẻ cho công nhân tại TP.HCM"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/ic_circle"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/baseline_arrow_forward_24"
                android:background="@color/green"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_background"
            >
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bộ sưu tập nhà cho thuê"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/baseline_lightbulb_24"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[Hà Nội] Danh sách phòng trọ giá rẻ dành cho công nhân"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/ic_circle"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[Đà Nẵng] Phòng trọ công nhân giá rẻ tại Đà Nẵng"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/ic_circle"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[TP.HCM] Phòng trọ giá rẻ cho công nhân tại TP.HCM"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/ic_circle"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/baseline_arrow_forward_24"
                android:background="@color/green"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>